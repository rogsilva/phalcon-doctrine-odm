{
    "name": "bookedplace/bp-profile",
    "description": "API for user and access management",
    "type": "project",
    "authors": [
        {
            "name": "Rogério Silva",
            "email": "ress.rogerio@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phalcon/devtools": "^4.0",
        "phpstan/phpstan": "^0.12.18",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "code:analyze": "./vendor/bin/phpstan analyse",
        "code:sniffer": "./vendor/bin/phpcs",
        "code:sniffer:fix": "./vendor/bin/phpcbf"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
